<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="Theme.Dark" parent="AppTheme">
       
        <item name="android:windowBackground">@color/black</item>
        
	    <item name="android:textColor">@color/white</item>
	    
	    <item name="android:listDivider">@color/yellow</item>
	    <item name="android:textColorHighlight">@color/red</item>
	    
	    <item name="android:actionBarStyle" >@style/Theme.Dark.ActionBar</item>
        
	    <item name="android:listViewStyle">@style/Theme.Dark.ListView</item>
	    
    </style>

    <style name="Theme.Dark.ActionBar"
           parent="android:Widget.ActionBar">
        
        <item name="android:background">@color/gray</item>
        
        <item name="android:titleTextStyle">@style/Theme.Dark.ActionBar.Title</item>
        <item name="android:subtitleTextStyle">@style/Theme.Dark.ActionBar.Subtitle</item>
        
    </style> 
    
    <style name="Theme.Dark.ActionBar.Title"
           parent="@android:style/TextAppearance.Medium">
        
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Theme.Dark.ActionBar.Subtitle"
           parent="@android:style/TextAppearance.Small">
        
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Theme.Dark.ListView"
           parent="@android:style/Widget.ListView">
        
        <!-- We're making the divider behave the same way as the
             selector - making it seem that there's no divider at all
         -->
        <item name="android:listSelector">@drawable/theme_solarized_dark_list_selector</item>
        <item name="android:divider">@drawable/theme_solarized_dark_list_selector</item>
    </style>    
    
</resources>
